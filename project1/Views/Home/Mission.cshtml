
@{
    ViewBag.Title = "Mission";
}
<link href="~/Content/myStyle.css" rel="stylesheet" />
<style>
    .jumbotron{
        height:300px;
        background-image:url('@ViewBag.Pic');
        background-position:center center;
        background-size:1000px;
    }
</style>
<div class="text-center">
    <ol class="breadcrumb">
        <!--Breadcrumb-->
        <li><a href="@Url.Action("MissPage")">Choose a different mission</a></li>
        <li><a href="@Url.Action("Index")">Home</a></li>
    </ol>
</div>
<div class="jumbotron">
    <h3 class="text-center">Welcome to the @ViewBag.Name</h3>
</div>
<div class="col-md-8 center-block">
        
    <img src="@ViewBag.Temple" width="600" />   
</div>
<div class="col-md-4">
    <img class="pull-left"src="@ViewBag.Flag" width="300"/>
</div>
<div class="col-md-4">
    Mission Address: @Html.Raw(ViewBag.Address)    
</div>
<div class="row col-md-12">
    <h6>
        Mission President: @ViewBag.President
        <br />
        Language: @ViewBag.Language
        <br />
        Climate: @ViewBag.Climate
        <br />
        Dominate Religion: @ViewBag.Religion
        <br />
    </h6>
</div>
<div class="row col-md-12">
    <h5><u><b>FAQ's</b></u></h5>
    <p style="color:red">What kind of food is typically eaten in this mission?</p>
    <p style="color:green">@ViewBag.Answer1</p>
    <a href="#" class="btn btn-info" role="button">Reply</a>
    <p style="color:red">Are people generally receptive to the missionaries?</p>
    <p style="color:green">@ViewBag.Answer2</p>
    <a href="#" class="btn btn-info" role="button">Reply</a>
    <p style=" color:red">What is the mode of transportation that is generally used?</p>
    <p style="color:green">@ViewBag.Answer3</p>
    <a href="#" class="btn btn-info" role="button">Reply</a>
</div>
<div class="row">
    <div class="box text-center">
        <div class="col-lg-12">
            <hr>
            <h3 class="intro-text text-center">
                <strong>Do You Have A Question?</strong>
            </h3>
            <hr>
        </div>
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">You can ask anything, and a past missionary will answer.</label>
                <input type="text" class="form-control center_div" id="exampleInputEmail1" placeholder="Type your question here">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
</div>
</div>